<%= form_for([@vehicle, @review]) do |f| %>
<%= render "shared/errors", object: @review %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required stars">
        <%= f.label :stars %>
        <% Review::STARS.each do |star| %>
          <span class="star">
            <%= f.radio_button :stars, star %> <%= star %>
          </span>
        <% end %>
      </li>
      <!--<li class="required stars">
        <%= f.label :stars %>
        <%= f.select :stars, Review::STARS, prompt: "Pick one" %>
      </li>-->
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <% if @review.new_record? %>
        <%= f.submit "Post Review" %>
      <% else %>
        <%= f.submit "Update Review" %>
      <% end %> |
      <%= link_to "Cancel", @vehicle, class: 'button' %>
    </p>
  </fieldset>
<% end %>