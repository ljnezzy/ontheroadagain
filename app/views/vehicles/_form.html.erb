<%= form_for(@vehicles) do |f| %>
  <p>
    <%= f.label :make %><br/>
    <%= f.text_field :make, autofocus: true %>
  </p>
  <p>
    <%= f.label :model %><br/>
    <%= f.text_field :model %>
  </p>
  <p>
    <%= f.label :year %><br/>
    <%= f.number_field :year %>
  </p>
  <p>
    <%= f.label :price %><br/>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.label :features %><br/>
    <%= f.text_area :features, cols: 40, rows: 7%>
  </p>
  <p>
    <%= f.submit %> |
    <%= link_to "Cancel", vehicles_path %>
  </p>
<% end %>